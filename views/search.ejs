<!-- search.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Search Resorts</title>
    <!-- Include your CSS here -->
</head>
<body>
    <h1>Search Resorts</h1>

    <!-- Display login success message -->
    <% if (messages && messages.success) { %>
        <p style="color: green;"><%= messages.success %></p>
      <% } %>
      

    <form action="/resorts/search-results" method="get">
        <input type="text" name="keyword" placeholder="Enter search term" required>
        <button type="submit">Search</button>
    </form>
    
    <!-- Display resorts if any are found -->
    <% if (typeof resorts !== 'undefined' && resorts.length > 0) { %>
        <% resorts.forEach(function(resort) { %>
            <div class="resort-container">
                <h2><%= resort.name %></h2>
                <!-- Display other resort details here -->
            </div>
        <% }); %>
    <% } else if (typeof resorts !== 'undefined') { %>
        <p>No resorts found.</p>
    <% } %>
</body>
</html>
